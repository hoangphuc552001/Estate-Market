      }]
      const selectElement = document.querySelector('#minprice');
      selectElement.addEventListener('change', (event) => {
          const i1=event.target.selectedIndex
          if (i1>=1){
              $("#maxprice").empty();
              for (let i=i1;i<6;i++){
                  $("#maxprice").append($("<option/>",options1[i]));
              }
          }
          else{
              $("#maxprice").empty();
              for (let i=0;i<6;i++){
                  $("#maxprice").append($("<option/>",options1[i]));
              }
          }
      });
      const selectElement1 = document.querySelector('#maxprice');
      selectElement1.addEventListener('change', (event) => {
          const i1=event.target.selectedIndex
          if (i1>=1){
              $("#minprice").empty();
              for (let i=0;i<=i1;i++){
                  $("#minprice").append($("<option/>",options2[i]));
              }
          }else{
              $("#minprice").empty();
