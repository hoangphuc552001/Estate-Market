<body>
        <div class="main-wrapper">
            <div class="app" id="app">
                <div class="sidebar-overlay" id="sidebar-overlay"></div>
                <div class="sidebar-mobile-menu-handle" id="sidebar-mobile-menu-handle"></div>
                <div class="mobile-menu-handle"></div>
                <article class="content item-editor-page">
                    <div class="title-block">
                        <h3 class="title"> Thêm danh mục
                            <span class="sparkline bar" data-type="bar"></span>
                        </h3>
                    </div>
                    <form name="item" method="post">
                        <div class="card card-block">
                            <div class="form-group row">
                                <label class="col-sm-2 form-control-label text-xs-right"> Name: </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control boxed"  id="nameCategory" name="nameCategory" placeholder="Nhập tên danh mục"> </div>
                                    <div  id="error" style="margin-left: 200px; margin-top: 10px">
                                    </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 form-control-label text-xs-right"> Category: </label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control boxed" placeholder="" value="{{nameParent}}" readonly> </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10 col-sm-offset-2">
                                    <button type="submit" id="btn" class="btn btn-primary" disabled> Xác nhận </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </article>
            </div>
        </div>
        <!-- Reference block for JS -->
        <div class="ref" id="ref">
            <div class="color-primary"></div>
            <div class="chart">
                <div class="color-primary"></div>
                <div class="color-secondary"></div>
            </div>
        </div>
</body>
{{#section 'jsAdmin'}}
    <script>
