<div id="listProProfile" class="row property-grid grid">

    {{#each listPro}}
        <div class="modal fade" id="change-{{this.estateid}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Thông tin sản phẩm</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Bạn chắc chắn muốn xóa sản phẩm này ?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy bỏ</button>
                        <button type="button" onclick="get({{this.estateid}})" id="aiuem" name="{{this.estateid}}" class="acy btn btn-primary">Xác nhận</button>
                    </div>

                </div>
            </div>
        </div>    <!-- ======= Intro Single ======= -->

        <div class="col-md-4">
            <div class="card-box-a card-shadow">
                <div class="img-box-a">
                    <img src="{{this.image}}" style="width: 400px;height: 300px;object-fit: cover"
                         alt="" class="img-a img-fluid">
                </div>
                <div class="card-overlay">
                    <div class="card-overlay-a-content">
                        <div class="card-header-a">
                            <h2 class="card-title-a">
                                <a href="/{{this.calling}}/{{this.category}}/{{this.estateid}}">{{this.title}}</a>
                            </h2>
                        </div>
                        <div class="card-body-a">
                            <div class="price-box d-flex">
                                <span class="price-a">{{this.current}}</span>
                            </div>
                            <a href="/{{this.calling}}/{{this.category}}/{{this.estateid}}" class="link-a">Click here to view
                                <span class="bi bi-chevron-right"></span>
                            </a>
                        </div>
                        <div class="card-footer-a">
                            <div style="position:absolute;top: -39px;right: 5px;z-index: 1">
                                <a href="/user/product/edit-product/{{this.estateid}}">
                                    <button type="button" class="btn btn-light">
                                        <i class="fa fa-pencil" aria-hidden="true"></i>
                                    </button>
                                </a>
                                <button name="{{this.estateid}}" type="button" data-bs-toggle="modal" data-bs-target="#change-{{this.estateid}}" class="btn btn-danger">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </button>
                            </div>
                            <ul class="card-info d-flex justify-content-around">
                                <li>
                                    <h4 class="card-info-title">Area</h4>
                                    <span>{{this.acreage}}
                                        <sup>2</sup></span>
                                </li>
                                <li>
                                    <h4 class="card-info-title">Beds</h4>
                                    <span>{{this.bedroom}}</span>
                                </li>
                                <li>
                                    <h4 class="card-info-title">Baths</h4>
                                    <span>{{this.bathroom}}</span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
