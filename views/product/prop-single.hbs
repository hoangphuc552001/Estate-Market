                                                        <div class="container">
                                                            <div class="row">
                                                                <div class="col-lg-8">
                                                                    <div class="intro-body">
                                                                        <h1 class="intro-title-top">{{new.ward}}
                                                                        </h1>
                                                                        <h1 class="intro-title mb-4 ">
                                                                            <span class="color-b">{{new.title}}
                                                                                <br>{{new.acreage}} <sup>2</sup></span>
                                                                        </h1>
                                                                        <p class="intro-subtitle intro-price">
                                                                            <a href="/du-an/{{new.id}}"><span
                                                                                    class="price-a">Xem thêm</span></a>
                                                                        </p>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        {{/each}}
                                    </div>
                                    <div class="swiper-pagination"></div>
                                </div><!-- End Intro Section -->
