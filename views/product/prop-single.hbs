    <script>
        function approveSending(e) {
            const name=document.getElementById("inputName").value
            const email=document.getElementById("inputEmail").value
            const message=document.getElementById("textMessage").value
            const title=document.getElementById("proTitle").textContent
            const price=document.getElementById("proPrice").textContent
            const ward=document.getElementById("proWard").textContent
            const id=document.getElementById("proID").textContent
            const type=document.getElementById("proName").textContent
            const state=document.getElementById("proSta").textContent
            const acreage=document.getElementById("proAcreage").textContent
            const bed=document.getElementById("proBed").textContent
            const bath=document.getElementById("proBath").textContent
            const seller=document.getElementById("proSeller").textContent
            $.ajax({
                async: false,
                type: "POST",
                url: "/mailer",
                data: {name,email,message,title,price,ward,
                id,type,state,acreage,bed,bath,seller},
                contentType: 'application/x-www-form-urlencoded',
                dataType: 'html',
                success: function (data) {
                    $("#ignismyModal").modal('show');
                    document.getElementById("inputName").value=""
                    document.getElementById("inputEmail").value=""
                    document.getElementById("textMessage").value=""
                },
                err: function (xhr, ajaxOptions, thrownError) {
                    alert("Lỗi")
                }
            })
        }
    </script>
