<ul id="list-comments" class="list-comments">
    {{#each comment}}
        <li class="comment-children">
            <div class="comment-avatar">
                <img src="/public/assets/img/author-1.jpg" alt="">
            </div>
            <div class="comment-details">
                <h4 class="comment-author">{{name}}</h4>
                <span>{{time timecmt}}</span>
                <p class="comment-description">
                    {{content}}
                </p>
                <a href="3">Reply</a>
            </div>
        </li>
    {{/each}}
</ul>
